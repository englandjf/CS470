<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ssu.jnn.cs470final.mainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map View"
        android:id="@+id/mv"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/su"
        android:layout_alignEnd="@+id/su"
        android:onClick="ButtonOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/lb"
        android:layout_above="@+id/su"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/su"
        android:layout_above="@+id/mv"
        android:layout_alignLeft="@+id/lb"
        android:layout_alignStart="@+id/lb"
        android:onClick="ButtonOnClick"/>
</RelativeLayout>
